{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
